<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/x310dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x24dp"
        android:layout_marginTop="@dimen/x18dp"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x24dp"
        android:layout_marginTop="@dimen/x12dp"
        android:layout_marginEnd="@dimen/x24dp"
        android:gravity="center"
        android:textColor="@color/color_494949"
        android:textSize="@dimen/x16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_close"
        tools:text="Health Status Health Status" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x24dp"
        android:layout_marginBottom="@dimen/x24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_msg">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/materialBtnStyle"
            android:layout_width="@dimen/x125dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x24dp"
            android:text="@android:string/cancel" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ok"
            style="@style/materialBtnStyle"
            android:layout_width="@dimen/x125dp"
            android:layout_height="wrap_content"
            android:text="@android:string/ok" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>