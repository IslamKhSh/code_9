<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="icon"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="text"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/x98dp"
            android:layout_height="@dimen/x98dp"
            android:layout_margin="@dimen/x12dp"
            app:cardCornerRadius="@dimen/x30dp"
            app:cardElevation="@dimen/x10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@{icon}"
                android:tint="@color/colorPrimary"
                tools:src="@drawable/ic_safety" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10dp"
            android:gravity="center"
            android:lines="2"
            android:text="@{text}"
            android:paddingBottom="@dimen/x8dp"
            android:textColor="@color/color_494949"
            android:textSize="@dimen/x16sp"
            android:textStyle="bold"
            tools:text="Personal Safety" />

    </LinearLayout>
</layout>